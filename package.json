{
  "name": "vale-chronicles",
  "version": "0.1.0",
  "type": "module",
  "description": "Golden Sun-inspired tactical RPG",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "validate:data": "tsx src/core/validation/validateAll.ts",
    "generate:sprites": "node scripts/generate-sprite-manifest.cjs",
    "validate:sprites": "node scripts/validate-sprites.cjs",
    "test:sprites": "node scripts/test-sprite-catalog.cjs",
    "precommit": "pnpm typecheck && pnpm lint && pnpm test && pnpm validate:data"
  },
  "dependencies": {
    "framer-motion": "^12.23.24",
    "pure-rand": "^6.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@dqbd/tiktoken": "^1.0.22",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.14.0",
    "@typescript-eslint/parser": "^7.14.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "fast-check": "^3.23.2",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "pnpm": "^8.15.0",
    "ts-morph": "^27.0.2",
    "tsx": "^4.20.6",
    "typescript": "^5.5.2",
    "vite": "^7.2.4",
    "vitest": "^1.6.1",
    "yargs": "^18.0.0"
  }
}
